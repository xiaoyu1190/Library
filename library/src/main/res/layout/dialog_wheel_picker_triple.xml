<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="@dimen/px10"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px10"
            android:text="取消"
            android:textColor="#666"
            android:textSize="@dimen/text_size_24px" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingBottom="@dimen/px10"
            android:paddingLeft="@dimen/px20"
            android:paddingRight="@dimen/px20"
            android:paddingTop="@dimen/px10"
            android:text="完成"
            android:textColor="#11a83c"
            android:textSize="@dimen/text_size_24px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#dcdcdc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/white">

        <com.wbxm.lib.recyclerwheelpicker.widget.RecyclerWheelPicker
            android:id="@+id/rv_picker1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:rwp_unitSize="18sp" />

        <com.wbxm.lib.recyclerwheelpicker.widget.RecyclerWheelPicker
            android:id="@+id/rv_picker2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="10dp"
            app:rwp_unitSize="18sp" />

        <com.wbxm.lib.recyclerwheelpicker.widget.RecyclerWheelPicker
            android:id="@+id/rv_picker3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="30dp"
            app:rwp_unitSize="18sp" />

    </LinearLayout>

</LinearLayout>